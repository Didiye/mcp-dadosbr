# Cloudflare Configuration
# Copy this file to .env for local development (do NOT commit .env)
# For CI/CD, configure these as GitHub Secrets

# Cloudflare API Token (required)
# Get from: https://dash.cloudflare.com/profile/api-tokens
# Permissions needed: Workers Scripts:Edit, Workers KV Storage:Edit
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token-here

# Cloudflare Account ID (optional - already in wrangler.toml)
# Get from: wrangler whoami
CLOUDFLARE_ACCOUNT_ID=your-account-id-here

# MCP Server Configuration (optional - has defaults)
MCP_TRANSPORT=http
MCP_HTTP_PORT=8787
MCP_CACHE_SIZE=256
MCP_CACHE_TTL=60000

# Search Provider API Keys (optional)
TAVILY_API_KEY=your-tavily-api-key-here
SERPER_API_KEY=your-serper-api-key-here